<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:AakStudio.Shell.UI.Controls">
    <ResourceDictionary.MergedDictionaries>
        <!--  Common Control Styles  -->
        <ResourceDictionary Source="pack://application:,,,/AakStudio.Shell.UI;Component/Themes/Base/ControlsBase.xaml" />
        <!--  Custom Controls Styles  -->
        <ResourceDictionary Source="pack://application:,,,/AakStudio.Shell.UI;Component/Themes/GlyphButton.xaml" />
        <ResourceDictionary Source="pack://application:,,,/AakStudio.Shell.UI;Component/Themes/MetroWindow.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="{x:Type ctrls:GlyphButton}"
        BasedOn="{StaticResource GlyphButtonBaseStyle}"
        TargetType="{x:Type ctrls:GlyphButton}" />

    <Style
        x:Key="{x:Type ctrls:MetroWindow}"
        BasedOn="{StaticResource MetroWindowBaseStyle}"
        TargetType="{x:Type ctrls:MetroWindow}" />
</ResourceDictionary>